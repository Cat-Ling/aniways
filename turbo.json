{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [
        ".next/**",
        "!.next/cache/**",
        "next-env.d.ts",
        "dist/**",
        ".sst/**"
      ]
    },
    "dev": {
      "persistent": true,
      "cache": false
    },
    "format": {
      "outputs": ["node_modules/.cache/.prettiercache"],
      "outputLogs": "new-only"
    },
    "lint": {
      "dependsOn": ["^build"],
      "outputs": ["node_modules/.cache/.eslintcache"]
    },
    "typecheck": {
      "dependsOn": ["^build"],
      "outputs": ["node_modules/.cache/tsbuildinfo.json"]
    },
    "clean": {
      "cache": false
    },
    "//#clean": {
      "cache": false
    },
    "push": {
      "cache": false,
      "interactive": true
    },
    "studio": {
      "cache": false,
      "persistent": true
    },
    "ui:add": {
      "cache": false,
      "interactive": true
    },
    "deploy:prod": {
      "dependsOn": ["^deploy:prod"]
    }
  },
  "globalEnv": [
    "DATABASE_URL",
    "MAL_CLIENT_ID",
    "MAL_CLIENT_SECRET",
    "MAL_SECRET_KEY",
    "WEBSITE_AWS_SSL_CERT_ARN",
    "HEALTHCHECK_AWS_SSL_CERT_ARN",
    "AWS_DEFAULT_REGION",
    "AWS_REGION",
    "AWS_ACCESS_KEY_ID",
    "AWS_SECRET_ACCESS_KEY",
    "AWS_SESSION_TOKEN",
    "HEALTHCHECK_KEY"
  ],
  "globalPassThroughEnv": ["NODE_ENV", "CI", "npm_lifecycle_event", "PORT"]
}
