{
  "$schema": "https://turbo.build/schema.json",
  "globalDotEnv": [".env"],
  "pipeline": {
    "build": {
      "outputs": [".next/**", "!.next/cache/**", "dist/**"],
      "dotEnv": [".env"],
      "dependsOn": ["^build"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "dotEnv": [".env"]
    },
    "start": {
      "dotEnv": [".env"],
      "dependsOn": ["^start"]
    },
    "package": {
      "dependsOn": ["build", "lint"],
      "dotEnv": [".env"],
      "cache": false
    },
    "deploy:prod": {
      "dependsOn": ["package"],
      "dotEnv": [".env"],
      "cache": false
    }
  }
}
