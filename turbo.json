{
  "$schema": "https://turbo.build/schema.json",
  "globalDotEnv": [".env.local", "./apps/website/.env.local"],
  "globalDependencies": [
    "NODE_ENV",
    "MAL_CLIENT_ID",
    "MAL_CLIENT_SECRET",
    "MAL_SECRET_KEY",
    "REVALIDATE_KEY",
    "DATABASE_URL"
  ],
  "pipeline": {
    "build": {
      "outputs": [".next/**", "!.next/cache/**"],
      "dependsOn": ["^build"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
