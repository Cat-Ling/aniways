{
  "name": "aniways",
  "version": "1.1.0",
  "private": true,
  "scripts": {
    "build": "dotenv -- turbo build",
    "dev": "dotenv -- turbo dev",
    "start": "dotenv -- turbo start",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "ui:add": "pnpm --filter @aniways/ui ui:add",
    "db:push": "pnpm --filter @aniways/data-access push",
    "db:migrate": "pnpm --filter @aniways/data-access migrate",
    "workspace:generate": "pnpm turbo gen workspace --name"
  },
  "devDependencies": {
    "@aniways/eslint-config": "workspace:*",
    "@aniways/typescript-config": "workspace:*",
    "dotenv-cli": "^7.3.0",
    "pre-commit": "^1.2.2",
    "prettier": "^3.1.1",
    "prettier-plugin-tailwindcss": "^0.5.11",
    "turbo": "^1.12.2"
  },
  "packageManager": "pnpm@8.9.0",
  "engines": {
    "node": ">=18"
  }
}
