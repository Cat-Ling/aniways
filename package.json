{
  "name": "aniways",
  "version": "1.1.0",
  "private": true,
  "scripts": {
    "build": "dotenv -- turbo build",
    "dev": "dotenv -- turbo dev",
    "start": "dotenv -- turbo start",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "ui:add": "bun --filter @aniways/ui ui:add",
    "db:push": "dotenv -- bunx --filter @aniways/database push",
    "db:studio": "dotenv -- bunx --filter @aniways/database db:studio",
    "deploy:prod": "dotenv -- turbo deploy:prod",
    "package": "dotenv -- turbo package",
    "workspace:generate": "bunx turbo gen workspace --name",
    "delete": "bunx npkill"
  },
  "devDependencies": {
    "@aniways/eslint-config": "workspace:*",
    "@aniways/typescript-config": "workspace:*",
    "@types/eslint": "^8.56.1",
    "@types/node": "^20.11.17",
    "dotenv-cli": "^7.3.0",
    "eslint": "^8",
    "npkill": "^0.11.3",
    "prettier": "^3.1.1",
    "prettier-plugin-tailwindcss": "^0.5.11",
    "turbo": "^1.12.2",
    "typescript": "5.3.3"
  },
  "packageManager": "bun@1.1.14",
  "engines": {
    "node": ">=18"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
