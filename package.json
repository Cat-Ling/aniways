{
  "name": "aniways",
  "private": true,
  "engines": {
    "node": ">=18"
  },
  "packageManager": "bun@1.1.14",
  "workspaces": [
    "apps/*",
    "packages/*",
    "tooling/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "clean": "git clean -xdf node_modules",
    "clean:workspaces": "turbo run clean",
    "db:push": "turbo -F @aniways/db push",
    "db:studio": "turbo -F @aniways/db studio",
    "dev": "turbo watch dev",
    "dev:website": "turbo watch dev -F @aniways/website",
    "format": "turbo run format --continue -- --cache --cache-location node_modules/.cache/.prettiercache",
    "format:fix": "turbo run format --continue -- --write --cache --cache-location node_modules/.cache/.prettiercache",
    "lint": "turbo run lint --continue -- --cache --cache-location node_modules/.cache/.eslintcache",
    "lint:fix": "turbo run lint --continue -- --fix --cache --cache-location node_modules/.cache/.eslintcache",
    "lint:ws": "bun sherif",
    "postinstall": "bun lint:ws",
    "typecheck": "turbo run typecheck",
    "ui:add": "turbo run ui:add",
    "deploy:prod": "turbo deploy:prod",
    "package": "turbo run package",
    "gen": "turbo gen init"
  },
  "devDependencies": {
    "@aniways/prettier-config": "workspace:*",
    "@turbo/gen": "^2.0.3",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.7",
    "prettier": "^3.3.1",
    "sherif": "^0.9.0",
    "turbo": "^2.0.3",
    "typescript": "^5.4.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx,js,cjs,mjs,json}": [
      "bun format:fix"
    ]
  },
  "prettier": "@aniways/prettier-config"
}
