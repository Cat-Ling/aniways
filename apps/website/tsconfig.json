{
  "extends": "@aniways/typescript-config/nextjs.json",
  "compilerOptions": {
    "plugins": [
      {
        "name": "next",
      },
    ],
    "paths": {
      "@/*": ["../../apps/website/*"],
      "@ui/*": ["../../packages/ui/src/*"],
      "@myanimelist/*": ["../../packages/myanimelist/src/*"],
      "@data/*": ["../../packages/data/src/*"],
      "@database/*": ["../../packages/database/src/*"],
    },
  },
  "include": [
    "next-env.d.ts",
    "next.config.mjs",
    "**/*.js",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
  ],
  "exclude": ["node_modules"],
}
