{
	"name": "@aniways/myanimelist",
	"version": "0.0.0",
	"private": true,
	"type": "module",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"default": "./src/index.ts"
		},
		"./env": {
			"types": "./dist/env.d.ts",
			"default": "./env.ts"
		}
	},
	"scripts": {
		"build": "tsc",
		"dev": "tsc --watch",
		"clean": "rm -rf .turbo node_modules dist",
		"format": "prettier --check . --ignore-path ../../.gitignore",
		"lint": "eslint",
		"typecheck": "tsc --noEmit --emitDeclarationOnly false"
	},
	"dependencies": {
		"@animelist/client": "^0.1.0",
		"fastest-levenshtein": "^1.0.16",
		"node-myanimelist": "^4.1.2",
		"@t3-oss/env-nextjs": "^0.10.1",
		"zod": "^3.23.8"
	},
	"devDependencies": {
		"@aniways/eslint-config": "workspace:*",
		"@aniways/prettier-config": "workspace:*",
		"@aniways/typescript-config": "workspace:*",
		"eslint": "^9.4.0",
		"prettier": "^3.3.1",
		"typescript": "^5.4.5"
	},
	"prettier": "@aniways/prettier-config"
}
